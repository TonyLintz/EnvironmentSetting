{
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/.__pycache__": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.CVS": true,
        "**/.DS_Store": true
    },
    // 顯示空白字元
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    // 儲存時，自動過濾多餘空格
    "files.trimTrailingWhitespace": true,
    // 控制字型大小 (以像素為單位)。
    "editor.fontSize": 12,
    // 控制是否自動換行。可以是:
    //  - 'off' (停用換行),
    //  - 'on' (檢視區換行),
    //  - 'wordWrapColumn' (於 'editor.wordWrapColumn' 換行`) 或
    //  - 'bounded' (當檢視區縮至最小並設定 'editor.wordWrapColumn' 時換行).
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "git.ignoreLimitWarning": true,
    "jupyter.appendResults": false,
    "files.associations": {
        "*.py": "python"
    },
    "workbench.panel.location": "bottom",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Default High Contrast",
    // sam 標配
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.inheritEnv": false,
    "python.linting.pylintCategorySeverity.error": "Hint",
    "python.linting.mypyCategorySeverity.error": "Hint",
    "explorer.confirmDragAndDrop": false,
    "python.formatting.autopep8Path": "",
    "python.formatting.blackPath": "flake8",
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "update.showReleaseNotes": false,
    "python.autoUpdateLanguageServer": false,
    "update.mode": "none",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
    "python.diagnostics.sourceMapsEnabled": true,
    "window.zoomLevel": 0,
    "editor.defaultFormatter": "himanoa.Python-autopep8",
    "editor.formatOnSave": true,
    "python.linting.flake8Enabled": true,
    "python.linting.maxNumberOfProblems": 80,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.easymotion": true,
    "vim.foldfix": true,
}